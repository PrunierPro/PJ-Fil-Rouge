@using FilRougeCore.Models;
@inject Blazored.LocalStorage.ILocalStorageService _localStorage;

<nav class="navbar navbar-expand-lg navbar-light bg-light navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#gros-biceps">Gros Biceps</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#features">Features</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#application">Application</a>
                </li>
                <li>
                    @if(User is null)
                    {
                        <a class="nav-link" href="/Login">Se connecter</a>
                    } else
                    {
                        <a class="nav-link" href="/User/@(User.Id)"><span class="oi oi-person"/>@User.FullName</a>
                    }
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {

    private User? User { get; set; }

    protected override async Task OnInitializedAsync()
    {
        User = await _localStorage.GetItemAsync<User>("user");
    }

    private async Task LogOut()
    {
        await _localStorage.RemoveItemAsync("user");
    }
}
